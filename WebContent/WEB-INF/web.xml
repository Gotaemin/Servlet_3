<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
	
	<filter>
		<filter-name>encode</filter-name>
		<filter-class>com.google.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>enc</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
	
	
	<filter-mapping>
		<filter-name>encode</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>admin</filter-name>
		<filter-class>com.google.filter.AdminFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>admin</filter-name>
		<url-pattern>/bbs/bbsWrite</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>admin</filter-name>
		<url-pattern>/bbs/bbsUpdate</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>admin</filter-name>
		<url-pattern>/bbs/bbsSelect</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>com.google.home.HomeController</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>point</servlet-name>
		<servlet-class>com.google.point.PointController</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>member</servlet-name>
		<servlet-class>com.google.member.MemberController</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>bbs</servlet-name>
		<servlet-class>com.google.bbs.BbsController</servlet-class>
	</servlet>
	 	
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>point</servlet-name>
		<url-pattern>/point/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>member</servlet-name>
		<url-pattern>/member/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>bbs</servlet-name>
		<url-pattern>/bbs/*</url-pattern>	
	</servlet-mapping>
	
	
</web-app>